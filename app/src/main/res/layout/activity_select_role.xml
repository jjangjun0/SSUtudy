<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRole"
    android:orientation="vertical"
    android:weightSum="5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:paddingTop="40dp"
        android:text="안녕하세요 \n당신은"
        android:fontFamily="@font/gowun_batang_regular"
        android:textSize="50dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="3"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/studentButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/custom_button_background"
            android:backgroundTint="@color/light_pink"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="4"
            android:layout_marginLeft="20dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/studentImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/baseline_person_24"
                app:tint="@color/pink"
                android:contentDescription="Button Icon" />
            <TextView
                android:id="@+id/studentText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="학생"
                android:textSize="20dp"
                android:fontFamily="@font/gowun_batang_regular"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/parentButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/custom_button_background"
            android:backgroundTint="@color/light_green"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/parentImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/baseline_person_24"
                app:tint="@color/green"
                android:contentDescription="Button Icon" />
            <TextView
                android:id="@+id/parentText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="학부모"
                android:textSize="20dp"
                android:fontFamily="@font/gowun_batang_regular"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/teacherButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/custom_button_background"
            android:backgroundTint="@color/light_purple"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="4"
            android:layout_marginRight="20dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/teacherImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/baseline_person_24"
                app:tint="@color/purple"
                android:contentDescription="Button Icon" />
            <TextView
                android:id="@+id/teacherText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="선생님"
                android:textSize="20dp"
                android:fontFamily="@font/gowun_batang_regular"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>