<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFragment">
    <!-- Material Calendar View -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="@color/selected_date_color"
        app:mcv_headerTextAppearance="@style/HeaderTextAppearance"
        app:mcv_weekDayTextAppearance="@style/WeekDayTextAppearance"
        app:mcv_dateTextAppearance="@style/DateTextAppearance"

        app:mcv_tileHeight="70dp"

        android:padding="5dp"
        />
    <!--    app:mcv_tileWidth="60dp"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/calendarStudentName"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/calendarModify"
            android:src="@drawable/baseline_edit_calendar_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp" />
    </RelativeLayout>


</FrameLayout>
