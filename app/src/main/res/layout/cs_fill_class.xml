<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    android:elevation="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <EditText
        android:id="@+id/className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="공통수학 1"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="50" />

    <EditText
        android:id="@+id/startDDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2024-11-27"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="10" />

    <EditText
        android:id="@+id/initialPerLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="수업 N회당 초기화 (회)"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="3" />

    <EditText
        android:id="@+id/tuitionWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="수업료 (만원)"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="10" />

    <EditText
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="학생 이름"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="20" />

    <EditText
        android:id="@+id/studentAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="학생 나이"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="3" />

    <EditText
        android:id="@+id/studentSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="학생이 다니는 학교"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="50" />

    <EditText
        android:id="@+id/parentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="학부모"
        android:textColorHint="@color/dim_gray"
        android:maxLines="1"
        android:maxLength="20" />
</LinearLayout>
