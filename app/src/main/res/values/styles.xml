<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 헤더 텍스트 스타일 -->
    <style name="HeaderTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item> <!-- 원하는 크기로 설정 -->
        <item name="android:textColor">#000000</item> <!-- 텍스트 색상 -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- 글꼴 설정 (선택사항) -->
    </style>

    <!-- 요일 텍스트 스타일 -->
    <style name="WeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#4169E1</item> <!-- 색상은 필요에 따라 변경 -->
    </style>

    <!-- 날짜 텍스트 스타일 -->
    <style name="DateTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>